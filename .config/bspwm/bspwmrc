#! /bin/sh

#Clean lingering programs when reloaded
"$HOME/.config/bspwm/clean" &

#Start polybar first
bash ~/.config/polybar/launch.sh &
#feh --bg-fill ~/Pictures/background.jpg &

# Variable Defines
color0=#3B4252
color4=#D8DEE9

# Make sure sxhkd is always running
while :; do
    if pgrep -x sxhkd > /dev/null; then
        true
    else
        sxhkd &
    fi
    sleep 5
done &

#Fix Mouse curoor on startup 
xsetroot -cursor_name left_ptr

#Set Keyboard Layout
setxkbmap -layout us

#Monitor Config
#bspc monitor -d 6 7 8 9 1 2 3 4 5

#BSPWM Config
bspc config border_width        1
bspc config top_padding         30
bspc config right_padding       6
bspc config left_padding        6
bspc config bottom_padding      6
bspc config window_gap          4
bspc config top_monocle_padding  0
bspc config right_monocle_padding 0
bspc config left_monocle_padding 0
bspc config bottom_monocle_padding 0

bspc config focused_border_color "#1ccdd6"
bspc config normal_border_color  "$color0"
bspc config active_border_color  "$color0"
bspc config presel_feedback_color "$color4"
bspc config split_ratio          0.50
bspc config borderless_monocle   false  
bspc config gapless_monocle      false
bspc config focus_follows_pointer true
bspc config external_rules_command "$HOME/.config/bspwm/external_rules.sh"
bspc config merge_overlapping_monitors true

#Application Rules
# Use command "xprop | grep WM_CLASS" to find the name of the application to be entered below
# After the command click on the application window and the name will be generated after the command and use the name generated by this command.
# Search "Bare-bones window manger by Angad Sharma" on dev.to for more
bspc rule -a firefox desktop=1
#bspc rule -a wine desktop='^7' state=floating follow=on
bspc rule -a discord desktop=2
#bspc rule -a synergy desktop='^9'

#Auto-Start
xrandr --output HDMI-0 --primary --mode 1920x1080 --rate 74.97 --output DP-5 --mode 1920x1080 --rate 60.00 --left-of HDMI-0 &
redshift -l 52.370216:4.895168 &
nitrogen --restore &
xclip &
#urxvtc &
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
picom --config "$HOME/.config/picom/picom.conf" &
nitrogen --restore &
#/usr/bin/synergys -f -d ERROR -n studio-pc -c /etc/synergy.conf -a 192.168.69.10:24800 --log ~/.local/log/synergy.log &
xsetroot -cursor_name left_ptr &
dunst &
nextcloud &
wallchange &

# Move to Desktop 1
#bspc desktop -f 1
# HDMI-0 en DP-5
bspc monitor DP-5 -d 2 3 4 5 6 7 8 9 0 
bspc monitor HDMI-0 -d 1 
